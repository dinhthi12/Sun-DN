<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("index.app"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to static_pages_home_path do %>
            <%= t ".home" %>
          <% end %>
        </li>
        <li><%= link_to  static_pages_help_path do %>
            <%= t ".help" %>
          <% end %>
        </li>
        <li><%= link_to static_pages_contact_path do %>
            <%= t ".contact" %>
          <% end %>
        </li>
        <% if logged_in? %>
          <li class="dropdown">
            <div class="dropdown-toggle" data-toggle="dropdown">
              <%= t "users.new.account" %> <b class="caret"></b>
            </div>
            <ul class="dropdown-menu">
              <li><%= link_to t("users.new.account"), current_user %></li>
              <li><%= link_to t("users.new.settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("users.new.log_out"), logout_path, method: :get %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
